@model StageManager.Models.NoteStagiaire

@{
    ViewBag.Title = "AddNote";
}

<h2>Ajouter une nouvelle note</h2>



@using (Html.BeginForm("AddNote", "Stagiaire", FormMethod.Post))
{
    <table>
        <tr>
            <th>Ajouter une note</th>
        </tr>
        <tr>
            <td>Commentaire: </td>
            <td>
                @Html.TextBoxFor(m => m.Content, htmlAttributes: new { @class = "form-control" })
            </td>
        </tr>
        <tr>
        <tr>
            <td>
                <input type="submit" value="Ajouter la note" class="btn btn-primary" />
            </td>
        </tr>
    </table>
}